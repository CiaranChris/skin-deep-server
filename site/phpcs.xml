<?xml version="1.0"?>
<ruleset name="Roots">
  <description>Roots Coding Standards</description>

  <!-- Scan work under development -->
  <file>web/app/themes/sd-theme</file>
  <file>web/app/mu-plugins/skin-deep</file>

  <!-- Exclude patterns -->
  <exclude-pattern>*/vendor</exclude-pattern>

  <!-- Scan only PHP files -->
  <arg name="extensions" value="php"/>

  <!-- Show colors in console -->
  <arg value="-colors"/>

  <!-- Show sniff codes in all reports -->
  <arg value="ns"/>

  <!-- Use PSR-2 as a base -->
  <rule ref="PSR2"/>
</ruleset>
